<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') -%>
  </head>
  <body>
    <div class="show-day-page">
      <h1 class="day-header">day <%=day.date-1%></h1>

      <div id="day-grid">
        <%-include('../partials/dayHours.ejs')-%>
          <% events.forEach((event) => { %>
          <div class = "day-grid-events">
            <a href="/User/Event/<%=event._id%>"><%=event.title%></a>
            <form
              action="/User/Event/<%=event._id%>?_method=DELETE"
              method="POST"
            >
              <input class="btn btn-danger" type="submit" value="" />
            </form>
          </div>
          <% }) %>
      </div>
    </div>
  </body>
</html>
